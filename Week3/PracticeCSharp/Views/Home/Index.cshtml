        <picture class="main-img main-img__1 ibg">
            <img src='/images/1.main-screen/Yanki1.jpg' srcset='' alt=''>
        </picture>
        <picture class="main-img main-img__2 ibg">
            <source srcset='/images/1.main-screen/Yanki2.jpg' media="(min-width: 768px)">
